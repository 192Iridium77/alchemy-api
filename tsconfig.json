{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "src",
    "sourceMap": true,
    "types": ["node", "@types/lodash"]
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules"]
}
